<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="281" Width="386">
    <Viewbox>
        <Grid Width="427" Height="292">

            <Label x:Name="temeperaturelabel" Content="Temperature:" HorizontalAlignment="Left" Margin="19,29,0,0" VerticalAlignment="Top"/>
            <Label x:Name="doorStatueLabel" Content="Door Status:" HorizontalAlignment="Left" Margin="24,217,0,0" VerticalAlignment="Top"/>
            <Label x:Name="foodAmountLabel" Content="Food Amount:" HorizontalAlignment="Left" Margin="13,63,0,0" VerticalAlignment="Top"/>
            <Label x:Name="waterLevelLabel" Content="Water Level:" HorizontalAlignment="Left" Margin="24,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.748,0.536"/>
            <Label x:Name="energyLevelLabel" Content="Energy Level:" HorizontalAlignment="Left" Margin="19,125,0,0" VerticalAlignment="Top"/>
            <Label x:Name="supplyAmountLabel" Content="Supply Amount:" HorizontalAlignment="Left" Margin="4,155,0,0" VerticalAlignment="Top"/>
            <Label x:Name="personelCountLabel" Content="Personnel Count: " HorizontalAlignment="Left" Margin="-1,184,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.484,0.438"/>
            <Label x:Name="temperatureDispay" Content="0°C" HorizontalAlignment="Left" Margin="196,29,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.461,0.79" Width="75"/>
            <Label x:Name="foodDisplay" Content="0 Kg" HorizontalAlignment="Left" Margin="196,58,0,0" VerticalAlignment="Top" Width="75"/>
            <Label x:Name="waterDisplay" Content="100%" HorizontalAlignment="Left" Margin="196,94,0,0" VerticalAlignment="Top"/>
            <Label x:Name="energyDisplay" Content="42069 kW h" HorizontalAlignment="Left" Margin="196,125,0,0" VerticalAlignment="Top" Width="75"/>
            <Label x:Name="supplyDisplay" Content="100 Kg" HorizontalAlignment="Left" Margin="196,155,0,0" VerticalAlignment="Top" Width="75"/>
            <Label x:Name="personelDisplay" Content="0" HorizontalAlignment="Left" Margin="196,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.757,0.317" Width="75"/>
