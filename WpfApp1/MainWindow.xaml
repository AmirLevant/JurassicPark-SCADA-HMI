            <Button x:Name="temperatureUpButton" Content="+" HorizontalAlignment="Left" Margin="276,32,0,0" VerticalAlignment="Top" Click="temperatureUpButton_Click"/>
            <Button x:Name="doorDisplayButton" Content="Opened" HorizontalAlignment="Left" Margin="189,220,0,0" VerticalAlignment="Top" Click="doorDisplayButton_Click"/>
            <Button x:Name="foodResupplyButton" Content="Restock" HorizontalAlignment="Left" Margin="276,58,0,0" VerticalAlignment="Top" Height="26" Width="58" Click="foodResupplyButton_Click"/>
            <Button x:Name="waterToggelButton" Content="Close Valve" HorizontalAlignment="Left" Margin="276,94,0,0" VerticalAlignment="Top" Height="26" Click="waterToggelButton_Click"/>
            <Button x:Name="energyToggelButton" Content="Turn Off Generator" HorizontalAlignment="Left" Margin="276,125,0,0" VerticalAlignment="Top" Height="26" Click="energyToggelButton_Click"/>
            <Button x:Name="SupplyResupplyButton" Content="Resupply Supplies" HorizontalAlignment="Left" Margin="276,155,0,0" VerticalAlignment="Top" Height="26" Click="SupplyResupplyButton_Click"/>
            <Image x:Name="lightning" HorizontalAlignment="Left" Height="21" Margin="153,127,0,0" VerticalAlignment="Top" Width="25" Source="/images/lightning_On.jpg"/>
            <Image x:Name="lock_Image" HorizontalAlignment="Left" Height="29" Margin="146,217,0,0" VerticalAlignment="Top" Width="30" Source="/lock_Open.png"/>
            <Label Content="Jurassic Building Monitor" HorizontalAlignment="Left" Margin="118,-2,0,0" VerticalAlignment="Top"/>
            <Image HorizontalAlignment="Left" Height="34" Margin="144,184,0,0" VerticalAlignment="Top" Width="32" Source="/personnel.png"/>
            <Image HorizontalAlignment="Left" Height="100" Margin="276,187,0,0" VerticalAlignment="Top" Width="100" Source="/images/Jurrasic Park.png"/>
